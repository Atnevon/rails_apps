<div class="row">
	<div="col-md-6 col-md-offset-3">
		<div class="well">
			<h1>Welcome to <%= @location %>! </h1>
			<div class="row">
				<div class="col-md-7">
					<p><em>Whats the weather like outside?</em></p>
					<p>Temperature is <%= @temp_f %>&deg;f / <%= @temp_c %>&deg;c </p>
					<p>Feels like: <%= @real_feel %>&deg;f </p>
				</div>
				<div class="col-md-5">
					<p><%= @weather_words %> <%= image_tag @weather_icon %> </p>
					<p><%= link_to "Full Forecast:", @Forecast_link, target: "_blank" %></p>
				</div>

			</div>
		</div>
	</div>
</div>